---
import MobileMenuToggle from './MobileMenuToggle.astro';
import type { Props } from '@astrojs/starlight/props';
import Footer from './Footer.astro';
import SwaggerFooter from './SwaggerFooter.astro';
const { hasSidebar, labels } = Astro.props;
---

<div class="page sl-flex antialiased">
	<header class="header"><slot name="header" /></header>
	<div class="flex flex-wrap md:flex-nowrap">
		{
			hasSidebar && (
				<nav class="sidebar relative z-[3] pb-[1px] bg-[var(--sl-color-header-bg)]" aria-label={labels['sidebarNav.accessibleLabel']}>
					<MobileMenuToggle {...Astro.props} />
					<div id="starlight__sidebar" class="sidebar-pane fixed menu-md:sticky top-1">
						<div class="sidebar-content sl-flex h-auto max-h-0 min-h-auto menu-md:max-h-screen">
							<slot name="sidebar" />
						</div>
					</div>
				</nav>
			)
		}
		<div class="main-frame"><slot /></div>
	</div>
	<SwaggerFooter />
	<Footer/>
</div>

<style>
	.page {
		flex-direction: column;
		min-height: 100vh;
	}
	.sidebar.active .sidebar-content {
		max-height: 100%;
	}

	.header {
		z-index: var(--sl-z-index-navbar);
		position: fixed;
		inset-inline-start: 0;
		inset-block-start: 0;
		width: 100%;
		height: var(--sl-nav-height);
		border-bottom: 1px solid var(--sl-color-hairline-shade);
		padding: var(--sl-nav-pad-y) var(--sl-nav-pad-x);
		padding-inline-end: var(--sl-nav-pad-x);
		background-color: var(--sl-color-bg-nav);
	}

	:global([data-has-sidebar]) .header {
		padding-inline-end: calc(var(--sl-nav-gap) + var(--sl-nav-pad-x) + var(--sl-menu-button-size));
	}

	.sidebar-pane {
		visibility: var(--sl-sidebar-visibility, hidden);
		position: fixed;
		z-index: var(--sl-z-index-menu);
		inset-block: var(--sl-nav-height) 0;
		inset-inline-start: 0;
		width: 100%;
		background-color: var(--sl-color-black);
		overflow-y: auto;
	}

	:global([aria-expanded='true']) ~ .sidebar-pane {
		--sl-sidebar-visibility: visible;
	}

	.sidebar-content {
		height: 100%;
		min-height: max-content;
		padding: 1rem var(--sl-sidebar-pad-x) 0;
		flex-direction: column;
		gap: 1rem;
	}

	@media (min-width: 50rem) {
		.sidebar-content::after {
			content: '';
			padding-bottom: 1px;
		}
	}

	.main-frame {
		padding-top: calc(var(--sl-nav-height) + var(--sl-mobile-toc-height));
	}

	@media (min-width: 50rem) {
		:global([data-has-sidebar]) .header {
			padding-inline-end: var(--sl-nav-pad-x);
		}
		.sidebar {
			border-inline-end: 1px solid var(--sl-color-hairline-shade);
		}
		.sidebar-pane {
			--sl-sidebar-visibility: visible;
			width: var(--sl-sidebar-width);
			background-color: var(--sl-color-bg-sidebar);
		}
		.sidebar-content {
			height: calc(100vh - var(--sl-nav-height)) !important;
		}
	}
</style>
